<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:m="sap.m"
    xmlns="sap.uxap">
    <ObjectPageLayout id="productInfoObjectPage">
        <headerTitle>
            <ObjectPageHeader objectTitle="{Name} ({ID})"></ObjectPageHeader>
        </headerTitle>

        <headerContent>
            <m:Title text="{Description}" />
        </headerContent>

        <sections>
            <ObjectPageSection title="Product Details">
                <ObjectPageSubSection >
                    <core:Fragment type="XML" fragmentName="ui5odatav2demo.fragment.ProductDetails.ProductSection" />
                </ObjectPageSubSection>
            </ObjectPageSection>

            <ObjectPageSection title="Category Info">
                <ObjectPageSubSection >
                    <core:Fragment type="XML" fragmentName="ui5odatav2demo.fragment.ProductDetails.CategorySection" />
                </ObjectPageSubSection>
            </ObjectPageSection>

            <ObjectPageSection title="Supplier Info">
                <ObjectPageSubSection >
                    <core:Fragment type="XML" fragmentName="ui5odatav2demo.fragment.ProductDetails.SupplierSection" />
                </ObjectPageSubSection>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</core:FragmentDefinition>