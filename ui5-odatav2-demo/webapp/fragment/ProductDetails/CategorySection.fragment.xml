<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:m="sap.m">
    <smartForm:SmartForm title="Category">
        <smartForm:Group>
            <smartForm:toolbar>
                <m:OverflowToolbar >
                    <m:ToolbarSpacer />
                    <m:Button icon="sap-icon://edit" press=".onCategoryEditPress" />
                </m:OverflowToolbar>
            </smartForm:toolbar>
            <smartForm:GroupElement>
                <smartField:SmartField textLabel="Category ID" value="{Category/ID}" />
            </smartForm:GroupElement>
            <smartForm:GroupElement>
                <smartField:SmartField textLabel="Category Name" value="{Category/Name}" />
            </smartForm:GroupElement>
        </smartForm:Group>
    </smartForm:SmartForm>
</core:FragmentDefinition>